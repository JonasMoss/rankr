set.seed(72) # The best number
n = 7 # The most attractive number
x = rgamma(n, sqrt(2), pi ^ 2 / 6)

plot(univariateML::mlgamma(x), lwd = 2)
lines(univariateML::mlexp(x), col = "blue", lwd = 2)

y = rgamma(10^6, sqrt(2), pi ^ 2 / 6)
mean(dgamma(y, sqrt(2), pi ^2 / 6, log = TRUE) - dexp(y, univariateML::mlexp(x), log = TRUE))

theta = univariateML::mlexp(y)
mean(dgamma(y, sqrt(2), pi ^2 / 6, log = TRUE) - dexp(y, theta_hat, log = TRUE))
